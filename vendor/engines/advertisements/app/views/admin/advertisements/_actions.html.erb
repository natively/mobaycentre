<ul>
  <% if Admin::AdvertisementsController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_advertisements_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_advertisement_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::AdvertisementsController.sortable? and Advertisement.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Advertisements"),
                 admin_advertisements_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Advertisements"),
                 admin_advertisements_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>