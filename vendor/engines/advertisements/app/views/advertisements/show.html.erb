<% content_for :body_content_title do %>
  <%= @advertisement.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @advertisement.title %>
    </p>
  </section>
  <section>
    <h1>Caption</h1>
    <p>
      <%=raw @advertisement.caption %>
    </p>
  </section>
  <section>
    <h1>Link Url</h1>
    <p>
      <%=raw @advertisement.link_url %>
    </p>
  </section>
  <section>
    <h1>Picture</h1>
    <p>
      <%= image_fu @advertisement.picture, nil %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="advertisements">
      <% @advertisements.each do |advertisement| %>
        <li>
          <%= link_to advertisement.title, advertisement_path(advertisement) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
