

<% if (children = @page.root.children).present? -%>
  <% children.keep_if { |c| c.in_menu? } -%>
  <ul class='submenu'> 
    <%= render :partial => '/shared/menu_branch', :collection => children,
               :locals => {  :apply_css => "selected", :hide_children => false } -%> 
  </ul>
<% end -%>
